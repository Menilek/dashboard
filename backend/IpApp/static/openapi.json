{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Visitor API",
    "description": "An API to return user meta data"
  },
  "paths": {
    "/api/visitors": {
      "get": {
        "tags": [
          "Visitor"
        ],
        "summary": "Returns an array of objects containing users request data",
        "responses": {
          "200": {
            "description": "an object containing the user's City, Internet Service Prodiver, IP Address and Timezone",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "date": {
                        "type": "string"
                      },
                      "time": {
                        "type": "string"
                      },
                      "ip_address": {
                        "type": "string"
                      },
                      "city": {
                        "type": "string"
                      },
                      "internet_service_provider": {
                        "type": "string"
                      },
                      "timezone": {
                        "type": "string"
                      }
                    }
                  },
                  "example": [
                    {
                      "date": "10/01/2021",
                      "time": "23: 04: 44",
                      "ip_address": "107.6.40.238",
                      "city": "London",
                      "internet_service_provider": "Sky Broadband",
                      "timezone": "London/Europe"
                    },
                    {
                      "date": "09/01/2021",
                      "time": "13: 51: 40",
                      "ip_address": "71.96.24.40",
                      "city": "Birmingham",
                      "internet_service_provider": "Virgin Media",
                      "timezone": "Europe/London"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/api/visit": {
      "post": {
        "tags": [
          "Visitor"
        ],
        "summary": "Create an entry in the database",
        "requestBody": {
          "description": "A user's date, time, ip address, city, internet service provider and timezone",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "ip_address": "71.96.24.40",
                  "city": "Birmingham",
                  "internet_service_provider": "Virgin Media",
                  "timezone": "Europe/London"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  }
}